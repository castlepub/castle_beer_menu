generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Beer {
  id          Int      @id @default(autoincrement())
  tapNumber   Int      @unique
  name        String
  brewery     String
  abv         String
  style       String
  price       String
  logo        String?
  status      String   @default("on_tap")
  tags        String?
  isCore      Boolean  @default(false)
  location    String?
  startDate   DateTime @default(now())
  endDate     DateTime?
  
  @@map("beers")
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String // bcrypt hashed
  
  @@map("users")
}

 